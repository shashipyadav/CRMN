<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Project"
            android:textColorHint="#9e9e9e"
            android:textSize="12sp"></TextView>

        <Spinner
            android:id="@+id/spacer_project"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spineer_dre_filcolor" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sub_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Sub Project"
            android:textColorHint="#9e9e9e"
            android:textSize="12sp"></TextView>

        <Spinner
            android:id="@+id/spacer_sub_project"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spineer_dre_filcolor" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_blue_bg"
        android:layout_margin="@dimen/_10dp"
        android:textColor="@color/white"
        android:text="Next"
        android:visibility="visible"></Button>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_buldig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_availbti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>